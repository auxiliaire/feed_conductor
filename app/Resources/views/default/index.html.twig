{% extends 'base.html.twig' %}

{% block title %}Feed Conductor{% endblock %}

{% block body %}
    <div class="container">
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right">
                    <li role="presentation" class="active"><a href="#">Home</a></li>
                    <li role="presentation"><a href="#">About</a></li>
                    <li role="presentation"><a href="#">Contact</a></li>
                </ul>
            </nav>
            <h3 class="text-muted">Feed Conductor - a demonstration</h3>
        </div>
        <div class="jumbotron">
            <h1>Welcome to Feed Conductor!</h1>
            <p class="lead">This is a small demo application from Viktor Daróczi written in PHP5, Symfony, Doctrine, Bootstrap.<br />
            By default it fetches the stored tweets from the db and show them to interact.</p>
        </div>
        <div class="row marketing">
            <div class="col-lg-12">
                {% for status in statuses %}
                    <img src="{{ user.socialProfileImage }}" class="profile" />
                    <div class="status">
                        <strong>{{ user.socialProfileName }}</strong>&nbsp;<span class="weak">@{{ user.socialProfileScreenName }} . {{ status.socialStatusCreatedAt.format("j M Y") }}</span><br />
                        {{ status.socialStatusText }}<br />
                        <a class="tlink" href="/retweet/{{ status.publicSocialStatusId }}">Retweet</a> | <a class="tlink" href="/reply/{{ status.publicSocialStatusId }}">Reply</a> | <a class="tlink" href="/favorite/{{ status.publicSocialStatusId }}">Favorite</a>
                    </div>
                    <div class="clearfix"><hr /></div>
                {% endfor %}
            </div>
        </div>
    <footer class="footer">
        <p>&copy; 2015 Viktor Daróczi</p>
    </footer>    </div>{# container #}
{% endblock %}

{% block stylesheets %}
    <style>
        a.tlink {
            color: #{% if linkColor %}{{ linkColor }}{% else %}6495ed{% endif %};
        }
        img.profile { float:left; margin-right: 10px; margin-left: 10px; }
        div.status { margin-left: 70px; }
        .weak { color:dimgray; }
        .clearfix { clear: both; }
    </style>
{% endblock %}
