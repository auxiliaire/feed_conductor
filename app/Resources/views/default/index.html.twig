{% extends 'base.html.twig' %}

{% block title %}Feed Conductor{% endblock %}

{% block core %}
        <div class="row marketing">
            <div class="col-lg-12">
                {% for status in statuses %}
                    <img src="{{ user.socialProfileImage }}" class="profile" />
                    <div class="status">
                        <strong>{{ user.socialProfileName }}</strong>&nbsp;<span class="weak">@{{ user.socialProfileScreenName }} . {{ status.socialStatusCreatedAt.format("j M Y") }}</span><br />
                        {{ status.socialStatusText }}<br />
                        <a class="tlink" href="{{ path('retweet', {'id': status.publicSocialStatusId}) }}">Retweet</a> | <a class="tlink" href="{{ path('reply', {'id': status.publicSocialStatusId}) }}">Reply</a> | <a class="tlink" href="{{ path('favorite', {'id': status.publicSocialStatusId}) }}">Favorite</a>
                    </div>
                    <div class="clearfix"><hr /></div>
                {% endfor %}
            </div>
        </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .nav-pills>li.active>a, .nav-pills>li.active>a:focus, .nav-pills>li.active>a:hover {
            background-color: #{% if linkColor %}{{ linkColor }}{% else %}6495ed{% endif %};
        }
        {# Uncomment this to use twitter background-color in the header: #}
        {#
        .jumbotron {
            background-color: #{% if backgroundColor %}{{ backgroundColor }}{% else %}eee{% endif %};
        }
        #}
        a {
            color: #{% if linkColor %}{{ linkColor }}{% else %}6495ed{% endif %};
        }
        img.profile { float:left; margin-right: 10px; margin-left: 10px; }
        div.status { margin-left: 70px; }
        .weak { color:dimgray; }
        .clearfix { clear: both; }
    </style>
{% endblock %}
